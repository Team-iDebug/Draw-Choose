<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" styleClass="message" stylesheets="@../../css/game.css" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iDebug.pickloose.fxcontroller.FXMessageController">
    <BorderPane.margin>
        <Insets bottom="1.0" left="1.0" top="1.0" />
    </BorderPane.margin>
    <children>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" stylesheets="@../../css/game.css" VBox.vgrow="ALWAYS">
            <content>
                <VBox fx:id="msgContainer" alignment="BOTTOM_LEFT" spacing="10.0" stylesheets="@../../css/game.css">
               <padding>
                  <Insets left="10.0" />
               </padding>
            </VBox>
            </content>
         <VBox.margin>
            <Insets right="10.0" />
         </VBox.margin>
        </ScrollPane>
      <HBox spacing="5.0">
         <children>
            <HBox fx:id="FXGif1" styleClass="gif-container" stylesheets="@../../css/game.css">
               <children>
                  <ImageView fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../widgets/points.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox fx:id="FXGif2" styleClass="gif-container" stylesheets="@../../css/game.css">
               <children>
                  <ImageView fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../widgets/points.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox fx:id="FXGif3" styleClass="gif-container" stylesheets="@../../css/game.css">
               <children>
                  <ImageView fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../widgets/points.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox fx:id="FXGif4" styleClass="gif-container" stylesheets="@../../css/game.css">
               <children>
                  <ImageView fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../widgets/points.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox fx:id="FXGif5" styleClass="gif-container" stylesheets="@../../css/game.css">
               <children>
                  <ImageView fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../widgets/points.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </HBox>
        <HBox prefHeight="30.0" prefWidth="240.0" spacing="5.0">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <children>
                <TextField fx:id="msgTextField" prefHeight="30.0" prefWidth="195.0" styleClass="message-input-box" stylesheets="@../../css/game.css">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextField>
                <HBox fx:id="msgSendButton" alignment="CENTER" minWidth="30.0" onMouseClicked="#onMsgSendButton" prefHeight="100.0" prefWidth="30.0" styleClass="small-circle-button" stylesheets="@../../css/game.css">
                    <children>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../widgets/send.png" />
                            </image>
                        </ImageView>
                    </children>
                </HBox>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" />
    </padding>
</VBox>
